{
    "env": {
        "node": true,
        "jest": true
    },
    "root": true,
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.eslint.json",
        "extraFileExtensions": [".js", ".ts"]  
    },
    "plugins": [
        "@typescript-eslint"
    ]
}